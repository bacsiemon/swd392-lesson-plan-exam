# Production Environment Variables
# Copy this file and rename to .env.production or configure in your deployment platform

# Database Configuration
DB_HOST=your-production-postgres-host
DB_NAME=lesson_plan_exam_prod
DB_USER=prod_user
DB_PASSWORD=your-secure-password

# JWT Configuration
JWT_SECRET=YourProductionSuperSecretKeyForJWTTokenGenerationThatIsAtLeast64CharactersLongAndVerySecure123456789
JWT_ISSUER=LessonPlanExamAPI-Production
JWT_AUDIENCE=LessonPlanExamClient-Production

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your-production-email@gmail.com
SENDER_PASSWORD=your-app-specific-password

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=https://+:443;http://+:80
ASPNETCORE_HTTPS_PORT=443

# File Upload Configuration
FILE_UPLOAD_BASE_URL=https://your-production-domain.com
MAX_FILE_SIZE=10485760

# Security
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-admin-panel.com
REQUIRE_HTTPS=true